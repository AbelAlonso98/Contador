<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="seekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_custom_light</item>
        <item name="android:thumb">@color/orange</item>
        <item name="android:progressTint">@color/orange</item>
    </style>
    <style name="scrollLayout">
        <item name="android:background">@drawable/background_upgrades_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="layout">
        <item name="android:background">@color/darkOrange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonTheme" parent="TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="maxUpgradeButtonTheme">
        <item name="android:backgroundTint">@color/darkOrange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="backImage">
        <item name="srcCompat">@drawable/img_back_orange</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="upgradeClick">
        <item name="srcCompat">@drawable/img_upgrade_click_orange</item>
    </style>

    <style name="upgradeAutoClick">
        <item name="srcCompat">@drawable/img_upgrade_autoclick_orange</item>
    </style>

    <style name="upgradeSpeed">
        <item name="srcCompat">@drawable/img_upgrade_speed_orange</item>
    </style>

    <style name="shopImage">
        <item name="srcCompat">@drawable/img_shop_orange</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>
    <style name="firstPlace">
        <item name="srcCompat">@drawable/img_first_orange</item>
        <item name="android:layout_width">25dp</item>
        <item name="height">25dp</item>
    </style>
    <style name="secondPlace">
        <item name="srcCompat">@drawable/img_second_orange</item>
        <item name="android:layout_width">25dp</item>
        <item name="height">25dp</item>
    </style>
    <style name="thirdPlace">
        <item name="srcCompat">@drawable/img_third_orange</item>
        <item name="android:layout_width">25dp</item>
        <item name="height">25dp</item>
    </style>
    <style name="medal">
        <item name="srcCompat">@drawable/img_medal_orange</item>
        <item name="android:layout_width">15dp</item>
        <item name="height">15dp</item>
    </style>


</resources>