<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="seekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_custom_dark</item>
        <item name="android:thumb">@color/pink</item>
        <item name="android:progressTint">@color/pink</item>
    </style>

    <style name="scrollLayout">
        <item name="android:background">@drawable/background_upgrades_dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="buttonTheme">
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="maxUpgradeButtonTheme" parent="TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">@color/darkPink</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="backImage">
        <item name="srcCompat">@drawable/img_back_pink</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="upgradeClick">
        <item name="srcCompat">@drawable/img_upgrade_click_pink</item>
    </style>

    <style name="upgradeAutoClick">
        <item name="srcCompat">@drawable/img_upgrade_autoclick_pink</item>
    </style>

    <style name="upgradeSpeed">
        <item name="srcCompat">@drawable/img_upgrade_speed_pink</item>
    </style>

    <style name="shopImage">
        <item name="srcCompat">@drawable/img_shop_pink</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="firstPlace">
        <item name="srcCompat">@drawable/img_first_pink</item>
        <item name="android:layout_width">25dp</item>
        <item name="height">25dp</item>
    </style>
    <style name="secondPlace">
        <item name="srcCompat">@drawable/img_second_pink</item>
        <item name="android:layout_width">25dp</item>
        <item name="height">25dp</item>
    </style>
    <style name="thirdPlace">
        <item name="srcCompat">@drawable/img_third_pink</item>
        <item name="android:layout_width">25dp</item>
        <item name="height">25dp</item>
    </style>
    <style name="medal">
        <item name="srcCompat">@drawable/img_medal_pink</item>
        <item name="android:layout_width">15dp</item>
        <item name="height">15dp</item>
    </style>

</resources>